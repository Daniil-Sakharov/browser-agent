# =====================================================
# AI BROWSER AGENT - LOCAL ENVIRONMENT
# =====================================================
# Скопируй этот файл в .env и заполни значения
# cp .env.example .env
# =====================================================

# =====================================================
# ANTHROPIC API CONFIGURATION
# =====================================================
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.0

# =====================================================
# BROWSER CONFIGURATION
# =====================================================
# false = открывает реальное окно браузера (для отладки)
# true = headless режим (для production)
BROWSER_HEADLESS=false
BROWSER_USER_DATA_DIR=.browser-data
BROWSER_TIMEOUT=30

# =====================================================
# AGENT CONFIGURATION
# =====================================================
AGENT_MAX_STEPS=30
AGENT_INTERACTIVE=true
AGENT_SCREENSHOTS=true
AGENT_SCREENSHOTS_DIR=screenshots

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
SECURITY_ENABLED=true
# false = спрашивает подтверждение для опасных операций
SECURITY_AUTO_CONFIRM=false

# =====================================================
# LOGGER CONFIGURATION
# =====================================================
LOG_LEVEL=debug
LOG_AS_JSON=false
LOG_FILE=logs/agent.log
